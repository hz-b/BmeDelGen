## FWD SETTINGS
####
record(calcout, "$(DEVN):chkPon$(CARD)$(CHAN)") {
    field(DESC, "init channel after power on")
    field(INPA, "$(DEVN):rdEsr.B7 CPP")
    field(OOPT, "When Non-zero")
    field(CALC, "A")
    field(OUT,  "$(DEVN):fwdInit$(CARD)$(CHAN).PROC")
    field(DISV, "1")
    field(SDIS, "$(DEVN):disable NMS")
    field(DISS, "INVALID")
}

