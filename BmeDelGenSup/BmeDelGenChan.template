    field(LNK8, "$(DEVN):rdCnam$(CARD)$(CHAN).PROC")
    field(LNK9, "$(DEVN):setDelClk$(CARD)$(CHAN).PROC")
    field(LNKA, "$(DEVN):setOutPol$(CARD)$(CHAN).PROC")
    field(PINI, "YES")
    field(DISV, "1")
    field(SDIS, "$(DEVN):disable NMS")
    field(DISS, "INVALID")
    field(FLNK, "$(DEVN):fwdInit2$(CARD)$(CHAN)")
