####
## SCAN ROUTINE
####
# disable scanning
record(bo, "$(DEVN):disable") {
    info("autosaveFields_pass0","VAL")
    field(DESC, "disable scan routine")
    field(ZNAM, "enabled")
    field(ONAM, "disabled")
    field(VAL,  "$(START_DISABLED)")
    field(PINI, "YES")
}

